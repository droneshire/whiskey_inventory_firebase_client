rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /clients/{email} {
      function isAdmin(request) {
        return request.auth.token.email == "ryeager12@gmail.com";
      }
      allow read, update: if request.auth.token.email == email || isAdmin(request);
      allow read, update, delete: if isAdmin(request);
    }
  }
}
